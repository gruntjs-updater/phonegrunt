{
    "phonegrunt": {

        "options": {
            "cordovaBin": "./node_modules/.bin/cordova",
            "installDir": "./tmp/single_target",
            "phonegapBin": "./node_modules/.bin/phonegap"
        },

        "init": {
            "name": "HelloPhonegap",
            "pkg": "com.example.hellophonegap",
            "install_os": ["android"],
            "uninstall_os": []
        },

        "build": {
            "local": {
                "plugins": {
                    "add": ["device","battery-status","camera","contacts"],
                    "remove": []
                }
            }
        }
    }
}